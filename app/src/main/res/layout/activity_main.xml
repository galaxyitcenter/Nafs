<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.theaimtech.nafs.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total number of survey"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/value_30dp"/>

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/shapes"
            android:layout_marginTop="@dimen/value_30dp"
            android:layout_weight="1.96">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:text="8"
                android:textAlignment="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/tvCounter"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/value_20sp">
        <Button
            android:onClick="startSurvery"
            android:id="@+id/btnstartaurvey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:text="Start Survey"
            android:textSize="@dimen/value_20sp"
            android:layout_marginTop="60dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
