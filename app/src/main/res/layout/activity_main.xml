<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.theaimtech.nafs.MainActivity">

    <TextView
        android:id="@+id/tvwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Welcome to The Nabz"
        android:textSize="@dimen/value_20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/layCounter">
        <TextView
            android:layout_below="@+id/tvwelcome"
            android:id="@+id/tvTitleCounter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Total Survey"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/tvwelcome"
            android:id="@+id/tvCounter"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:layout_below="@+id/layCounter"
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnNext"
        android:text="Next"/>

</RelativeLayout>
